<h1>The flats</h1>

<p>
<div class="container">
  <div class="row">
      <ol><% @flats.each do |flat| %>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <li><%= flat.name %></li>
        <%= link_to "edit", edit_flat_path(flat) %>
        <%= link_to "remove flat", flat_path(flat), method: :delete%>
         <%end%>
      </ol>
    </div>
  </div>
</div>
</p>
<%= link_to 'Add a new flat', new_flat_path %>
